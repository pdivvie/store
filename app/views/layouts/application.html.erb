<!DOCTYPE html>
<html>
  <head>
    <title>Store</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <link href="https://fonts.googleapis.com/css2?family=Grandstander:wght@300&family=Open+Sans&display=swap" rel="stylesheet">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% cache do %>
      <div class="<%= @page %>-page">
      <div class="row page-container">
      <%= render 'layouts/links'%>
        <div class="col-8">
          <% unless @page == "home"%>
            <%= render 'layouts/title'%>
          <% end %>
          <%= yield %>
        </div>
      </div>
    <% end %>
  </body>
</html>
